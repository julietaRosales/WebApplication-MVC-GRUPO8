@model IEnumerable<WebApplication_MVC_GRUPO8.Models.User>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                   Usuarios
                </h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear Usuario
                </a>
            </div>
            <div class="card shadow">
                <div class="card-body">
                  <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Categoria</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Email</th>
                                    <th>Activo</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                                <tr>
                                                    <td class="text-uppercase">@item.rol</td>
                                                    <td>@item.nombre</td>
                                                    <td>@item.apellido</td>
                                                     <td>@item.email</td>
                                                     <td>
                                                        @if (item.userActivo)
                                                        {
                                                        <i class="bi bi-check-circle-fill text-success"></i>
                                                        }
                                                        else
                                                        {
                                                         <i class="bi bi-x-circle-fill text-danger"></i>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info" title="Ver Detalles">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning" title="Editar">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger" title="Eliminar">
                                                                <i class="bi bi-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                }
                            </tbody>
                        </table>
                        @if (!Model.Any())
                        {
                                        <div class="alert alert-info text-center">
                                            <i class="bi bi-info-circle"></i> No hay usuarios registradas.
                                        </div>
                        }
                  </div >
                </div>
            </div>
        </div>
    </div>
</div>