@model WebApplication_MVC_GRUPO8.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                       Crear nueva categoria
                    </h4>
                </div>
                <div class="card-body">

                    @* Mensajes de error general *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    @* Formulario *@
                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label asp-for="nombre" class="form-label">
                                 Nombre
                            </label>
                            <input asp-for="nombre" class="form-control" placeholder="Escribir nombre de la categoria" />
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>

                        @* <div class="form-check"> *@
                        @*       <label class="form-check-label" for="myCheckbox" > *@
                        @*        Activar categoria *@
                        @*       </label> *@
                        @*       <input class="form-check-input" type="checkbox" value="" id="myCheckbox"> *@
                        @* </div> *@
                        @* Botones *@
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-danger">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                 Crear categoria
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
